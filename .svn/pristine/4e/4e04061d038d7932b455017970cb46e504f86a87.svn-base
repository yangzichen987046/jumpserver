{% extends 'base.html' %}
{% load mytags %}
{% block content %}
{% include 'nav_cat_bar.html' %}

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-sm-12">
            <div class="ibox float-e-margins" id="all">
                <div class="ibox-title">
                    <h5> 项目管理查询</h5>
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                            <i class="fa fa-wrench"></i>
                        </a>
                        <a class="close-link">
                            <i class="fa fa-times"></i>
                        </a>
                    </div>
                </div>

                <div class="ibox-content">
                    <form id="asset_form">
                        <div class="col-sm-9" style="padding-left: 0px;padding-right: 0px;">
                            <a href="/jrelease/project/add" class="btn btn-sm btn-primary "> 创建项目 </a>
                            <label>
                                <select name="usergroup_name" id="usergroup_name" class="form-control m-b input-sm get-auto" style="padding:0px 12px;" onchange="change_info()">
                                    <option value="">客户</option>
                                         {% for usergroup in usergroup_all %}
                                                 {% ifequal usergroup.name usergroup_name %}
                                                      <option value="{{ usergroup.id}}" selected >{{ usergroup.name}}</option>
                                                 {% else %}
                                                      <option value="{{ usergroup.id}}" >{{ usergroup.name}}</option>
                                                 {% endifequal %}
                                         {% endfor %}
                                </select>
                            </label>

                            <label>
                                <select id="proj_name" name="proj_name" class="form-control m-b input-sm get-auto" style="padding:0px 12px;" onchange="change_info()">
                                    <option value="">项目</option>
                                        {% for pro in project_all %}
                                            {% ifequal pro.proj_name proj_name %}
                                                     <option value="{{ pro.proj_name}}" selected>{{ pro.proj_name}}</option>
                                                 {% else %}
                                                     <option value="{{ pro.proj_name}}">{{ pro.proj_name}}</option>
                                                 {% endifequal %}
                                        {% endfor %}
                                </select>
                            </label>


                        </div>
                        <div class="col-sm-3" style="padding-right: 0">
                             <div class="input-group inline-group">
                                <input type="text" class="form-control m-b input-sm" id="search_input" name="keyword" value="{{ keyword }}" placeholder="Search">
                                <input type="text" style="display: none">
                                <div class="input-group-btn">
                                    <button id='sub' href="{% url 'asset_list' %}?search=true" type="button" class="btn btn-sm btn-primary search-btn">
{#                                    <button id='search_btn' href="{% url 'asset_list' %}?search=true" type="button" class="btn btn-sm btn-primary search-btn"  onclick="change_info()">#}
                                        - 搜索 -
                                    </button>
                                </div>
                            </div>
                        </div>
                        <div id="export"></div>
                        <table class="table table-striped table-bordered table-hover " id="editable" name="editable">
                            <thead>
                                <tr>
                                    <th class="text-center"> 项目名称 </th>
                                    <th class="text-center"> 发布主机 </th>
                                    <th class="text-center"> 主机集群 </th>
                                    <th class="text-center">操作 </th>
                                </tr>
                            </thead>
                            <tbody class="xx">
                                {% for project in project_list %}
                                     <tr class="gradeX">
                                        <td class="text-center">{{ project.proj_name }}</td>
                                        <td class="text-center">{{ project.release_host_name}}</td>
                                        <td class="text-center">{{ project.cluster_name }}</td>
                                        <td class="text-center">
                                            <a href="{% url 'project_detail' %}?id={{ project.id }}" class="btn btn-xs btn-primary">详情</a>
                                            <a href="{% url 'project_edit' %}?id={{ project.id }}" class="btn btn-xs btn-info">编辑</a>
                                            <a value="" class="btn btn-xs btn-danger group_del">删除</a>
                                        </td>
                                     </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                        <div class="row">
                            <div class="col-sm-6">

                            </div>
                            {% include 'paginator.html' %}
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block self_footer_js %}
<script>
(function($){


    $.getUrlParam = function(name)
        {
        var reg = new RegExp("(^|&)"+ name +"=([^&]*)(&|$)");
        var r = window.location.search.substr(1).match(reg);
        if (r!=null) return unescape(r[2]); return null;
        }
    })(jQuery);
$(document).ready(function(){
    var usergroup_name=$.getUrlParam('usergroup_name')
    if(usergroup_name !==null && usergroup_name !=="") {
            $("#usergroup_name").find("option").each(function () {

                $("option[value='" + usergroup_name + "']").attr("selected", true);

            })
        }
})
function change_info(){
        var args = $("#asset_form").serialize();
        window.location = "{% url 'project_list' %}?" + args
    }

</script>
{% endblock %}
