def db_del_key(username):
    """
    从数据库中删除用户
    """
    user = get_object(AccessKey, key_id=username)
    if user:
        user.delete()


def db_update_key(**kwargs):
    """
    数据库更新用户Access Key信息
    """
    id = kwargs.pop('id')
    key = AccessKey.objects.filter(id=id)
    if key:
        key.update(**kwargs)
        sync_host_list(kwargs.group_id, kwargs.plat_id, kwargs.key_id, kwargs.key_secret)
    else:
        return None


