                                     {% for asset in asset_all %}
                                         {% ifequal asset.host_id group %}
                                            <option value="{{ asset.host_id}}" selected>{{ asset.host_name_show}}</option>
                                         {% else %}
                                           <option value="{{ asset.host_id}}" >{{ asset.host_name_show}}</option>
                                         {% endifequal %}

                                    {% endfor %}
                                </select>
                            </label>
                            <label>
                                <select name="app" class="form-control m-b input-sm get-auto" style="padding:0px 12px;">
