{% block self_footer_js %}
<script>
 $(document).ready(function() {
  $(".get-auto").change(function () {

       var args = $("#asset_form").serialize();
        window.location = "{% url 'program_status' %}?" + args

  })
 })
</script>
{% endblock %}
